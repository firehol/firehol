\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{dbfirehol}[2013/04/11 DocBook LaTeX Style for FireHOL]

%% Use the original package and pass the options
\RequirePackageWithOptions{docbook}

\fancypagestyle{dbzerothheading}{%
	\fancyhf{} % clear all header and footer fields
	\renewcommand{\headrulewidth}{0pt}%
	\renewcommand{\footrulewidth}{0.5pt}%
	\lfoot[]{\@ifundefined{DBKpublisher}{}{\DBKpublisher}}%
	}

%% Let reshape the cover page
\let\originalDBKcover\DBKcover
\def\DBKcover{
\ifthenelse{\equal{\DBKedition}{}}{\def\edhead{}}{\def\edhead{Ed. \DBKedition}}

% interligne double
\setlength{\oldbaselineskip}{\baselineskip}
\setlength{\baselineskip}{2\oldbaselineskip}
\thispagestyle{dbzerothheading}
%%%%\textsf{
\vfill
\vspace{11.0ex}
\begin{flushright}
  {\Huge{\textbf{\DBKtitle}}}\\[1.5ex]%
	\noindent\rule[-1ex]{0.75\textwidth}{5pt}\\[1.5ex]
  \ifx\DBKsubtitle\relax\else%
    {\Large{\textbf{\DBKsubtitle}}}\\%
  \fi
	\vspace{11.5ex}
	\ifthenelse{\equal{\DBKauthor}{}}{}{\Large{\textsf{\DBKauthor\\}}\vspace{3.0ex}}%
	\ifthenelse{\equal{\DBKreleaseinfo}{}}{}{\normalsize{\texttt{Release \DBKreleaseinfo\\}}}%
	\normalsize{\textsf{\DBKdate}}\\ %
\end{flushright}
\vfill
\setlength{\baselineskip}{\oldbaselineskip}
\hspace{2.0em}
\vspace{2.5ex}
\begin{center}
\begin{tabular}{p{6em} p{6em}}
\Large{\DBKreference{} \edhead} & \\
\end{tabular}
\end{center}
%%%%}

% Format for the other pages
\newpage
\setcounter{page}{1}
\setlength{\baselineskip}{\oldbaselineskip}
\lfoot[]{}
}

%% Let reshape the fancy release box
\let\originalreleasebox\releasebox
\def\releasebox{%
  \ifthenelse{\equal{\DBKreleaseinfo}{}}{}%
  {\texttt{Release \DBKreleaseinfo}}}%

%% Let refine the description list
\renewlist{description}{description}{5}
\setlist[description]{style=nextline}

