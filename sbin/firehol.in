	# --- test prerequisites ---
	
	require_work clear || return 1
	set_work_function -ne "Initializing ${FUNCNAME}"
	
	local ipv="${FIREHOL_NS_CURR}"
	if [ "z${1}" = "z-ns" ]
	then
		ipv="${2}"
		shift 2
	fi
	push_namespace "${ipv}"


	# --- get paramaters and validate them ---
	
